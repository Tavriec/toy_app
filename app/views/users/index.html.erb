<div class="container">
<div class="row">

<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col-sm-4">Name</th>
      <th scope="col-sm-4">Email</th>
      <th colspan="3" scope="col-sm-4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td ><%= link_to 'Show', user, class: "nav-link badge badge-success text-white" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "nav-link badge badge-warning text-white" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "nav-link badge badge-danger text-white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "nav-link badge badge-primary text-white" %>
</div>
</div>