<div class="container">
<div class="row">
<p id="notice"><%= notice %></p>

<h1>Microposts</h1>

<table class="table table-bordered">
  <thead>
    <tr class="h5">
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td><%= link_to 'Show', micropost, class: "nav-link badge badge-success text-white" %></td>
        <td><%= link_to 'Edit', edit_micropost_path(micropost), class: "nav-link badge badge-warning text-white" %></td>
        <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' }, class: "nav-link badge badge-danger text-white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micropost', new_micropost_path, class: "nav-link badge badge-primary text-white" %>
</div>
</div>
